{
    "name": "start",
    "version": "0.0.1",
    "description": "A way to start web applications",
    "private": true,
    "license": "MIT",
    "author": "@davi-mbatista",
    "scripts": {
        "start": "webpack-dev-server --config webpack/development.js",
        "build": "webpack --config webpack/build.js",
        "precommit": "lint-staged"
    },
    "devDependencies": {
        "@babel/cli": "7.8.4",
        "@babel/core": "7.8.7",
        "@babel/preset-env": "7.8.7",
        "babel-loader": "8.0.6",
        "clean-webpack-plugin": "3.0.0",
        "copy-webpack-plugin": "5.1.1",
        "css-loader": "3.4.2",
        "file-loader": "6.0.0",
        "html-webpack-plugin": "3.2.0",
        "mini-css-extract-plugin": "0.9.0",
        "optimize-css-assets-webpack-plugin": "5.0.3",
        "postcss-import": "12.0.1",
        "postcss-loader": "3.0.0",
        "postcss-preset-env": "6.7.0",
        "prettier": "2.0.4",
        "purgecss-webpack-plugin": "2.1.0",
        "script-ext-html-webpack-plugin": "2.1.4",
        "size-plugin": "2.0.1",
        "style-loader": "1.1.3",
        "svelte-loader": "2.13.6",
        "svelte-preprocess": "3.5.0",
        "tailwindcss": "1.2.0",
        "webpack": "4.42.0",
        "webpack-bundle-analyzer": "3.6.1",
        "webpack-cli": "3.3.11",
        "webpack-dev-server": "3.10.3",
        "webpack-merge": "4.2.2"
    },
    "dependencies": {
        "svelte": "3.20.1"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "browserslist": [
        "last 2 chrome version",
        "last 2 firefox version",
        "last 2 safari version"
    ],
    "postcss": {
        "plugins": {
            "postcss-preset-env": {},
            "postcss-import": {},
            "tailwindcss": {}
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid"
    }
}
